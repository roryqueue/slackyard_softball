<ol class="page-header">
  <li><%= link_to @game.away_team_lineup.team.name, team_path(@game.away_team_lineup.team) %></li>
  <li> (<%= link_to @away_pitcher.last_name, team_player_path(@game.away_team_lineup.team, @away_pitcher) %>) </li>
  <li>- <%= @game.away_score %> </li>
</ol>

<table>
  <thead>
    <th>Player</th>
    <th>At-Bats</th>
    <th>Hits</th>
    <th>RBIs</th>
    <th>Runs</th>
    <th>Singles</th>
    <th>Doubles</th>
    <th>Triples</th>
    <th>Homeruns</th>
    <th>Strikeouts</th>
  </thead>
  <% @game.away_team_lineup.team.players.each do |player|%>
    <tr>
      <td><%= player.name %></td>
      <td><%= player.at_bats_in(@game) %></td>
      <td><%= player.hits_in(@game) %></td>
      <td><%= player.rbis_in(@game) %></td>
      <td><%= player.runs_scored_in(@game) %></td>
      <td><%= player.singles_in(@game) %></td>
      <td><%= player.doubles_in(@game) %></td>
      <td><%= player.triples_in(@game) %></td>
      <td><%= player.homeruns_in(@game) %></td>
      <td><%= player.strikeouts_batted_during(@game) %></td>
    </tr>
  <% end %>
</table><br>

<ol class="page-header">
  <li>@ <%= link_to @game.home_team_lineup.team.name, team_path(@game.home_team_lineup.team) %></li>
  <li> (<%= link_to @home_pitcher.last_name, team_player_path(@game.home_team_lineup.team, @home_pitcher) %>) </li>
