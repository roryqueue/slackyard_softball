</table><br>

<h2><a href="javascript:void(0)" class="score-log-title">Score Log</a> | <a href="javascript:void(0)" class="pitch-log-title">Pitch Log</a></h2>
<table class="score-log">
  <% @runs.each do |run| %>
    <tr>
      <td><h5><%= link_to run.scorer.name, team_player_path(run.scorer.team, run.scorer) %> batted in by <%= link_to run.batter.name, team_player_path(run.batter.team, run.batter) %> off <%= link_to run.pitcher.name, team_player_path(run.pitcher.team, run.pitcher) %></h5></td>
    </tr>
  <% end %>
</table>
<table class="pitch-log">
  <thead>
    <th>Inning</th>
    <th>Pitcher</th>
    <th>Batter</th>
    <th>Strike?</th>
    <th>Swing?</th>
    <th>Contact?</th>
    <th>Fielder</th>
    <th>Result</th>
  </thead>
  <% @pitches.each do |pitch| %>
    <tr>
      <td><%= pitch.inning_number %></td>
      <td><%= pitch.pitcher.name %></td>
      <td><%= pitch.batter.name %></td>
      <td><%= pitch.strike_zone %></td>
      <td><%= pitch.swing %></td>
      <td><%= pitch.contact %></td>
      <td><%= pitch.fielder.name %></td>
      <td><%= pitch.contact_result %></td>
    </tr>
  <% end %>
</table><br>


<script>
  $('.score-log, .pitch-log').hide();

  $('.score-log-title').click(function() {
    $('.score-log').toggle();
    $('.pitch-log').hide();
  });

  $('.pitch-log-title').click(function() {
    $('.pitch-log').toggle();
    $('.score-log').hide();
  });
</script>
