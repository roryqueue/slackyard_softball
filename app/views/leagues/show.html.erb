<ol class="page-header">
  <li><%= @league.name %> </li>
  <% if current_user.try(:id) == @league.commissioner_id %>
    <li><%= link_to 'Edit', edit_league_path(@league) %></li>
  <% end %>
  <li> (Champion: <%= link_to @league.champion.name, team_path(@league.champion) %>)</li>
</ol>


<p>
  <%= "Commissioner: #{@league.commissioner.user_name}" %> | <%= link_to "Create a new team in #{@league.name}!", new_league_team_path(@league) %>
</p>
<hr>

<div class="standing-table twelve">
  <h1>Season Standings</h1>
  <table>
    <thead>
      <th>Team</th>
      <th>Manager</th>
      <th>Wins</th>
      <th>Losses</th>
    </thead>
    <% @standings.each do |team| %>
      <tr>
        <td><%= link_to team.name, team_path(team) %></td>
        <td><%= team.user.user_name %></td>
        <td><%= team.wins %></td>
        <td><%= team.losses %></td>
      </tr>
    <% end %>
  </table>
  <br>
</div>

<div class="league-stat-leaders nine">
  <h1>League Leaders</h1><hr>
  <h3>Home Runs:</h3><br>
  <span class="cards">
    <% @league.homerun_leaders.first(3).each do |player| %>
      <%= render "refills/cards", person: player %>
    <% end %>
  </span>
  <hr>

  <h3>Batting:</h3><br>
  <span class="cards">
    <% @league.hit_leaders.first(3).each do |player| %>
      <%= render "refills/cards", person: player %>
    <% end %>
  </span>
  <hr>

  <h3>Pitching:</h3><br>
  <span class="cards">
    <% @league.pitching_win_leaders.first(3).each do |player| %>
      <%= render "refills/cards", person: player %>
    <% end %>
  </span>
</div>
<div class="three">
  <%= render "partials/scores", games: @league.games.last(7) %>
</div>
